@model  IEnumerable<prjWebBird.Models.vi_user_fly>
@{
    ViewBag.Title = "飛失列表-圖";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.locafail = "Fly";
    ViewBag.locaAction = "picIndex";
}
<style>
    .modelpic li {
        width: 50px;
        height: 50px;
        position: relative;
        top: 80px;
        /*left: 70px;*/
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        background-image:url('/images/loading.gif');
        opacity:0.5;
        transition:  all 0.5s;
        
    }
    .modelpic li:hover {
        
        opacity:1;
    }

    .modelpic .carousel-item,
    .modelpic img{
        height: 300px;
        background-repeat: no-repeat;
        background-position: center center;
        background-size: cover;
        border-radius: 5px;
    }
    .information {
    width: 100%;
    height: 100%;
    background-image: linear-gradient(to top, rgba(0, 0, 0, 1), rgba(2, 4, 5, 0.5)25%, rgba(255, 255, 255, 0) 30%), url('/images/loading.gif');
    background-position: center;
    background-size: contain;
    overflow: hidden;
    display: inline-block;
}
</style>
@foreach (var item in Model)
{
    

<div class="flybox">
    @{
        ViewBag.modelpic = (item.mno + "pic");
        ViewBag.modeluserno = (item.userno);
        ViewBag.modelmtime = (item.mdate_create?.ToString("yyyyMMddHHmmss"));
        ViewBag.modelloca = (ViewBag.modeluserno +"/Fly/" + item.mno);
        
    }
    <div class="information " style="border-radius: 5px;  display: inline-block;
    overflow: hidden;" data-toggle="modal" data-target="#@item.mno">
        <img src="~/Photos/@ViewBag.modelloca/1.jpg" alt="" class="img-fluid" style="height:100%;width:100% ">
       
    </div>
    <!-- 圖片內容 -->
    <div class="infotext  text-white  ">
        <span class="infotitle bigfont">
            @Html.DisplayFor(modelItem => item.mspecies)
        </span><span class=" badge badge-pill badge-primary  mt-1 ">@Html.DisplayFor(modelItem => item.statename)</span>
        <p class="infobody  pl-2  bigfont ">
            <span class="small infotime  bigfont">
                @Html.DisplayFor(modelItem => item.mdate)
                <span class=" infoarea ">@string.Format("{0:HH:mm}", item.mtime)</span>

            </span><br>@Html.DisplayFor(modelItem => item.maddr)
        </p>
        <p class="pl-2 small">飛失地址：<span>@Html.DisplayFor(modelItem => item.maddr_detail)</span></p>
