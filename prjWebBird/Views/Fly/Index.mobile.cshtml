@model IEnumerable<prjWebBird.Models.z_func_fly>

@{
    ViewBag.Title = "飛失列表-清單";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.locafail = "Fly";

    ViewBag.locaAction = "Index";
}
<h2 class="d-none d-lg-block">飛失協尋清單</h2>


<div class="table-responsive">
    @if (DateTime.Now.Hour > 18 || DateTime.Now.Hour < 6)
    {
        @:<table class="table table-light table-hover table-striped table-sm">
            @:<tr class="table-warning ">
            }
            else
            {
                @:<table class="table table-light table-hover table-striped  table-sm">
                    @:<tr class="table-secondary ">
                    }

    <th class="text-nowrap">
        @Html.DisplayNameFor(model => model.mname)
    </th>
    <th class="text-nowrap">
        @Html.DisplayNameFor(model => model.show_id)
    </th>
    <th class="text-nowrap">
        @Html.DisplayNameFor(model => model.mspecies)
    </th>
    <th class="text-nowrap">
        @Html.DisplayNameFor(model => model.maddr)
    </th>
    <th class="text-nowrap">
        @Html.DisplayNameFor(model => model.mdate)
    </th>
    <th class="text-nowrap">
        @Html.DisplayNameFor(model => model.mstate)
    </th>
    @if (UserAccount.IsLogin)
    {
        <th class="text-nowrap">

        </th>
    }
</tr>

@foreach (var item in Model)
{
    <tr>

        <td class="text-nowrap">
            @Html.DisplayFor(modelItem => item.mname)
        </td>
        <td>
            @if (item.mid2 == null)
            {@Html.DisplayFor(modelItem => item.show_id)
        }
        else
        {
            string[] arr = item.show_id.Split('、');

            @arr[0]<br>@arr[1]
        }
        </td>

        <td class="text-nowrap">
            @Html.DisplayFor(modelItem => item.mspecies)
        </td>

        <td class="text-nowrap">
            @Html.DisplayFor(modelItem => item.maddr)
        </td>
        <td class="text-nowrap">
            @Html.DisplayFor(modelItem => item.mdate)
        </td>

        <td class="text-nowrap">
            @Html.DisplayFor(modelItem => item.mstate)
        </td>


        @using Securitys;
        @if (UserAccount.IsLogin)
        {
            <td class="text-nowrap">

                @if (item.edit == true)
                {
                    if (UserAccount.mno == item.user_no || UserAccount.UserRole == enUserRole.Admin)
                    {
                        @Html.ActionLink("修改", "Edit", new { id = item.mno })
                        if (UserAccount.UserRole == enUserRole.Admin)
                        {
                            @:| @Html.ActionLink("刪除", "Delete", new { id = item.mno }, new { onclick = "return confirm('確定要刪除嗎?')" })
                        }
                    }
                }

            </td>
}

    </tr>
}

</table>
</div>

