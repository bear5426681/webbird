@model IEnumerable<prjWebBird.Models.vi_funcUNION>

@{
    ViewBag.Title = "首頁-清單";
    Layout = "~/Views/Shared/_LayoutPageWellcome.cshtml";
    ViewBag.locafail = "Home";
    ViewBag.locaAction = "Index";
}
<style>
    .fa,.fas,.far{
        line-height: unset;
    }

</style>

<div class="table-responsive d-none d-lg-block">
    @if (DateTime.Now.Hour > 18 || DateTime.Now.Hour < 6)
    {
        @:<table class="table table-light table-hover table-striped">
            @:<tr class="table-warning ">
            }
            else
            {
                @:<table class="table table-light table-hover table-striped">
                    @:<tr class="table-secondary ">
                    }

    <th class="text-nowrap">
        @Html.DisplayNameFor(model => model.mname)
    </th>
    <th class="text-nowrap">
        @Html.DisplayNameFor(model => model.show_id)
    </th>

    <th class="text-nowrap">
        @Html.DisplayNameFor(model => model.mspecies)
    </th>
    <th class="text-nowrap">
        @Html.DisplayNameFor(model => model.mcolor)
    </th>
    <th class="text-nowrap">
        @Html.DisplayNameFor(model => model.maddr)
    </th>
    <th class="text-nowrap">
        @Html.DisplayNameFor(model => model.mdate)
    </th>
    <th class="text-nowrap">
        @Html.DisplayNameFor(model => model.mdate_edit)
    </th>
    <th class="text-nowrap">
        @Html.DisplayNameFor(model => model.statename)

    </th>
</tr>

@foreach (var item in Model)
{
    <tr>

        <td class="text-nowrap">
            @Html.DisplayFor(modelItem => item.mname)
        </td>
        <td>
            @if (item.mid2 == null)
            {@Html.DisplayFor(modelItem => item.show_id)
        }
        else
        {
            string[] arr = item.show_id.Split('、');

            @arr[0]<br>@arr[1]
        }
        </td>
        <td class="text-nowrap">
            @Html.DisplayFor(modelItem => item.mspecies)
        </td>
        <td class="text-nowrap">
            @Html.DisplayFor(modelItem => item.mcolor)
        </td>
        <td class="text-nowrap">
            @Html.DisplayFor(modelItem => item.maddr)<br><span class="small"> @Html.DisplayFor(modelItem => item.maddr_detail)</span>
        </td>
        <td class="text-nowrap">
            @Html.DisplayFor(modelItem => item.mdate)
        </td>
        <td class="text-nowrap">
            @*@Html.DisplayFor(modelItem => item.mdate_edit?.ToString("yyyy/MM/dd"))*@
            @string.Format("{0:yyyy/MM/dd}", item.mdate_edit)<br /><span class="small">@string.Format("{0:HH:mm}", item.mdate_edit)</span>
        </td>

        @if (item.mno.Substring(0, 1) == "F")
        {
            <td class="text-nowrap text-warning">
                @Html.DisplayFor(modelItem => item.statename)

            </td>
        }
        else if (item.mno.Substring(0, 1) == "C")
        {
            <td class="text-nowrap text-danger">
                @Html.DisplayFor(modelItem => item.statename)

            </td>
        }
        else if (item.mno.Substring(0, 1) == "S")
        {
            <td class="text-nowrap text-info">
                @Html.DisplayFor(modelItem => item.statename)

            </td>
        }
    </tr>
}

</table>
</div>
