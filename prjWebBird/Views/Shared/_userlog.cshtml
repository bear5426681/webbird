<div class="modal fade " id="poplogin" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog ">
        <!-- .modal-content -->
        <div class="modal-content bg-light">
            <div class="modal-body ">
                <div class="container m-auto">
                    <div class="row mb-3">
                        <div class="col text-right close" data-dismiss="modal" aria-hidden="true">
                            &times;
                        </div>
                    </div>
                    <ul class="nav nav-tabs px-2" id="myTab" role="tablist">
                        <li class="nav-item w-50 ">
                            <a class="nav-link active" id="loginnav" data-toggle="tab" href="#login"
                               role="tab" aria-controls="home" aria-selected="true">登入</a>
                        </li>
                        <li class="nav-item w-50 ">
                            <a class="nav-link " id="registernav" data-toggle="tab" href="#register"
                               role="tab" aria-controls="profile" aria-selected="false">註冊</a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div id="login" class=" tab-pane fade show active" role="tabpanel">
                            @Html.Partial("~/Views/user/Login.cshtml")

                        </div>
                        <div id="register" class=" tab-pane fade" role="tabpanel">

                            @Html.Partial("~/Views/user/_Register.cshtml")



                        </div>

                    </div><!-- /.row -->
                </div><!-- /.container -->
            </div><!-- /.modal-body -->
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
